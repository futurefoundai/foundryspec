C4Component
    title Component Diagram: Git Manager

    Container_Boundary(git_manager, "Git Manager") {
        Component(puller, "pull()", "Method", "Clones or updates a single remote repository.")
        Component(syncer, "sync()", "Method", "Iterates through all external specs and pulls updates.")
        Component(analyzer, "getSpecChanges()", "Method", "Analyzes git log for recent changes in assets/.")
    }

    System_Ext(simple_git, "simple-git", "Node.js wrapper for Git commands.")
    System_Ext(fs, "fs-extra", "File system operations.")

    Rel(puller, simple_git, "clone / pull")
    Rel(syncer, simple_git, "pull")
    Rel(analyzer, simple_git, "log / show")
    
    Rel(puller, fs, "Updates config")
    Rel(syncer, fs, "Reads config")

    UpdateLayoutConfig($c4ShapeInRow="3", $c4BoundaryInRow="1")
