requirementDiagram
    requirement Functional {
        id: "REQ_Functional"
        text: "The system shall provide extensible documentation capabilities."
        risk: Low
        verifymethod: Test
    }

    requirement Smart_Interception {
        id: "REQ_SmartInterception"
        text: "The system shall automatically resolve architectural IDs from diagram participant groups for seamless navigation."
        risk: Low
        verifymethod: Test
    }

    requirement Entity_Verification {
        id: "REQ_EntityVerification"
        text: "The system shall ensure all interaction flows reference only valid, documented architectural entities."
        risk: Medium
        verifymethod: Test
    }

    requirement Multi_Destination_Nav {
        id: "REQ_MultiDestinationNav"
        text: "The system shall provide a selection modal when a node corresponds to multiple architectural views (e.g. Data, Sequence, Flow)."
        risk: Low
        verifymethod: Test
    }

    Functional -contains-> Smart_Interception
    Functional -contains-> Entity_Verification
    Functional -contains-> Multi_Destination_Nav

    requirement Safe_Removal {
        id: "REQ_SafeRemoval"
        text: "The system shall prevent removing categories referenced by other documents."
        risk: Medium
        verifymethod: Test
    }

    Functional -contains-> Safe_Removal


    requirement Dynamic_Root {
        id: "REQ_DynamicRoot"
        text: "The system shall automatically generate a navigation root and category indices from the folder structure."
        risk: Medium
        verifymethod: Test
    }

    requirement Synthetic_Hub {
        id: "REQ_SyntheticHub"
        text: "The build process must synthesize root.mermaid and folder_name.mermaid files dynamically to ensure 100% reachability without manual index files."
        risk: Low
        verifymethod: Test
    }

    requirement Zero_Config {
        id: "REQ_ZeroConfig"
        text: "The system shall operate without project-level configuration files."
        risk: Medium
        verifymethod: Test
    }

    requirement Integrity_Guarantee {
        id: "REQ_Integrity"
        text: "The system shall guarantee 100% reachability from the Hub Root for all documentation nodes."
        risk: High
        verifymethod: Test
    }

    requirement Local_First {
        id: "REQ_LocalFirst"
        text: "The system shall support full build and serve capabilities without external internet dependencies."
        risk: Medium
        verifymethod: Test
    }

    requirement Zero_Maintenance {
        id: "REQ_ZeroMaintenance"
        text: "The system shall eliminate manual indexing through dynamic folder-to-hub synthesis."
        risk: Low
        verifymethod: Test
    }

    requirement Build_Performance {
        id: "REQ_Performance"
        text: "The system shall build a documentation hub with 50+ diagrams in under 30 seconds."
        risk: Medium
        verifymethod: Test
    }

    requirement Non_Functional {
        id: "REQ_NonFunctional"
        text: "The system core shall adhere to strict quality and performance standards."
        risk: Low
        verifymethod: Test
    }

    Non_Functional -contains-> Integrity_Guarantee
    Non_Functional -contains-> Local_First
    Non_Functional -contains-> Zero_Maintenance
    Non_Functional -contains-> Build_Performance

    Functional -contains-> Dynamic_Root
    Functional -contains-> Zero_Config
    Dynamic_Root -contains-> Synthetic_Hub
