    requirements: 
      - REQ_UX
      - REQ_Persistence
  - id: "COMP_ClickInterceptor"
    requirements: REQ_Automation
  - id: "COMP_InteractiveComments"
    requirements: REQ_InteractiveComments
  - id: "COMP_SidebarControllers"
    requirements: REQ_UX
  - id: "COMP_PersonaDrawer"
    requirements: REQ_InteractiveComments
