  - id: "COMP_ComponentViewer"
    requirements: REQ_UX
  - id: "COMP_ContextViewer"
    requirements: REQ_UX
  - id: "COMP_DataViewer"
    requirements: REQ_UX
  - id: "COMP_FlowViewer"
    requirements: REQ_UX
  - id: "COMP_JourneyViewer"
    requirements: REQ_UX
  - id: "COMP_RequirementViewer"
    requirements: REQ_UX
  - id: "COMP_SequenceViewer"
    requirements: REQ_UX
  - id: "COMP_StateViewer"
