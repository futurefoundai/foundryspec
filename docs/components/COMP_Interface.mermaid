classDiagram
    class COMP_CLI {
        <<Component>>
        +CommandRegistry
        +Entrypoint
    }

    class COMP_DevServer {
        <<Component>>
        +FileWatcher
        +ApiHandler
        +StaticServer
    }

    class COMP_MCP_Server {
        <<Component>>
        +ToolRegistry
        +ProtocolHandler
        +AgentBridge
    }

    COMP_CLI --> COMP_DevServer : spawns
    COMP_DevServer --> COMP_CLI : reports status
    COMP_MCP_Server --> COMP_CLI : leverages commands
